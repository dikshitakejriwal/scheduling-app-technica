class Task{
    constructor(name, difficulity, priority){
        this.name = name;
        this.difficulity = difficulity;
        this.priority = priority;
    }
}

class Block{
    constructor(name, strat, end){
        this.name = name;
        this.start = this.start;
        this.end = this.end;
    }
}

